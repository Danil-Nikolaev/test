<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
<changeSet id="1" author="danil.nikolaev">
    <createTable tableName="deposit_details">
        <column name="id" type="varchar(64)">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="event_type" type="varchar(255)"/>
        <column name="event_date" type="timestamp"/>
        <column name="customer_id" type="varchar(36)"/>
        <column name="dbo_id" type="varchar(64)"/>
        <column name="document_id" type="varchar(64)"/>
        <column name="create_date" type="timestamp"/>
        <column name="updated_date" type="timestamp"/>
        <column name="status" type="varchar(64)"/>
        <column name="deposit_sum" type="numeric"/>
        <column name="repayment_account_code" type="varchar(13)"/>
        <column name="deposit_code" type="varchar(64)"/>
        <column name="deposit_term_id" type="varchar(64)"/>
        <column name="deposit_currency" type="varchar(3)"/>
        <column name="deposit_rate" type="numeric"/>
        <column name="deposit_capitalization" type="boolean"/>
        <column name="deposit_auto_prolongation" type="boolean"/>
        <column name="min_sum" type="numeric"/>
        <column name="max_sum" type="numeric"/>
        <column name="add_min_sum" type="numeric"/>
        <column name="partial_withdrawal" type="boolean"/>
        <column name="early_withdrawal_rate" type="numeric"/>
        <column name="deposit_end_rate" type="timestamp"/>
        <column name="deposit_replenishment" type="boolean"/>
        <column name="deposit_interest_freq" type="varchar(64)"/>
        <column name="deposit_name" type="varchar(255)"/>
        <column name="remind_after_mm" type="smallint"/>
        <column name="status_reminder" type="smallint"/>
    </createTable>
</changeSet>
</databaseChangeLog>
